extends layout

block content
  form(method='post', action='contact/send')
    h1 Contact
    .form-group
      label Name
      input.form-control(type='text',name='name', placeholder='Enter Your Name')
    .form-group
      label Email
      input.form-control(type='text',name='email', placeholder='Enter Your Email')
    .form-group
      label Message
      textarea.form-control(type='text',name='message', placeholder='Enter a Message')
    button.btn.btn-default(type='submit') Submit